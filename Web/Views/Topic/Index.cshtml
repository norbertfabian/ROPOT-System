@model Web.Models.TopicViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Topics</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Topic</th>
        <th>Parent</th>
        <th>Operations</th>
    </tr>

    @foreach (var item in Model.Topics)
    {
        <tr>
            <td>
                @item.Name
            </td>
            <td>
                @(item.Parent != null ? item.Parent.Name : "-")
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @if (item.Childs.Count > 0)
                {
                    <text>Delete is not available. Topic has child topics!</text>
                }
                else
                {
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
</table>
