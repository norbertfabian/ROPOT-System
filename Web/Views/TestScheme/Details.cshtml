@model Web.Models.TestSchemeEditModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <td>
            @Model.TestScheme.Name
        </td>
    </tr>
    <tr>
        <th>
            Open time
        </th>
        <td>
            @Model.TestScheme.OpenTime
        </td>
    </tr>
    <tr>
        <th>
            Close time
        </th>
        <td>
            @Model.TestScheme.CloseTime
        </td>
    </tr>
    <tr>
        <th>
            Test time
        </th>
        <td>
            @Model.TestScheme.TestTime
        </td>
    </tr>
    <tr>
        <th>
            Amount of questions
        </th>
        <td>
            @Model.TestScheme.QuestionsAmount
        </td>
    </tr>
</table>

<div class="row">

    <div class="col-md-6">
        <h4>Topics</h4>
        <table class="table">
            @foreach (var item in Model.TestScheme.Topics)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
        </table>
    </div>

    <div class="col-md-6">
        <h4>Student groups</h4>
        <table class="table">
            @foreach (var item in Model.TestScheme.Groups)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                </tr>
            }
        </table>
    </div>

</div>

